<div class="row fs-5 mx-4 mt-4 px-5">
    <div class="col-5 px-0">
            <nav aria-label="breadcrumb" >
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/typecommodity">Type of Commodity</a></li>
                    <li class="breadcrumb-item active" aria-current="page" style="color: #fafafa;" id="frozen" name="table">frozen</li>
                </ol>
            </nav>
    </div>
    <div class="col-7 px-0 d-flex justify-content-end align-items-start">
        <a href="/frozen/additem" class="btn btn-primary px-4 py-2"><i class="bi bi-plus-lg"></i> Add</a>
    </div>
</div>

<div class="mx-4">
    <div class="conatiner rounded-3 shadow-sm p-4 m-5 mt-4 bg-dark">
        <table class="table table-dark table-hover text-center table align-middle ">
            <thead>
                <tr>
                <th scope="col-1">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Serial No.</th>
                <th scope="col" style="width: 10%;">MFD/PKD</th>
                <th scope="col">Availbility</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price ( Per Item )</th>
                <th scope="col" class="text-end" style="width: 20%;">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    <th scope="row">{{this.ID}}</th>
                    <td class="p_name">{{this.Name}}</td>
                    <td id='serial'>{{this.Serial}}</td>
                    <td id="dat"> {{this.PKD}} </td>
                    <td id="avail" class="instock"> {{this.Availbility}}</td>
                    <td id='quantity'>{{this.Quantity}}</td>
                    <td style="letter-spacing: 1px;">{{this.Price}}</td>
                    <td class="text-end">
                    <a type="button" class="btn btn-outline-primary mx-3 px-4"><i class="bi bi-pencil"></i> Edit </a>
                    <a type="button" href="/commodity/{{this.ID}}"class="btn btn-outline-danger  px-4"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>