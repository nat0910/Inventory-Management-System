<div class="container bg-dark w-25 p-5 py-5 rounded-3 mt-5">
    <p class="display-6 text-center">Login</p>
    {{#if alert}}
    <div class="alert  alert-danger alert-dismissible fade show mt-2 w-100 fs-6 py-1" role="alert">
        {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form novalidate class="d-flex justify-content-center align-self-center align-items-center mt-4 flex-column gap-3 "  method="post" action="/login">
       <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person"></i></span>
            <input type="text" class="form-control" name="user" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" id="login-username" required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1"><i class="bi bi-key"></i></span>
            <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" id="login-password" name="pwd" required>
            
        </div>
        <button href="/admin/login" class="btn btn-primary p-2 mt-3 w-75 ">Login</button>
    </form>
</div>