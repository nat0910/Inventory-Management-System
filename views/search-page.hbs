<div class="fs-5 mx-5 m-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="color: #fafafa;">Search</li>
        </ol>
    </nav>
</div>

<div class="conatiner rounded-3 shadow-sm p-4 mx-5 mt-3 bg-dark">
    <table class="table table-dark table-hover text-center table align-middle ">
      <thead>
        <tr>
          <th scope="col-1">ID</th>
          <th scope="col" >Name</th>
          <th scope="col">Type of Commodity</th>
          <th scope="col">Serial No.</th>
          <th scope="col" style="width: 10%;">MFD/PKD</th>
          <th scope="col" style="width: 10%;">Expiry Date</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price ( Per Item )</th>
          <th scope="col" class="text-end" style="width: 20%;">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
          <tr>
            <th scope="row">{{this.ID}}</th>
            <td class="p_name">{{this.Name}}</td>
            <td> {{this.Type}} </td>
            <td> {{this.Serial}} </td>
            <td id="dat"> {{this.PKD}} </td>
            <td id="dat"> {{this.Expiry}} </td>
            <td>{{this.Quantity}}</td>
            <td style="letter-spacing: 1px;">{{this.Price}}</td>
            <td class="text-end">
              <button class="btn btn-outline-primary mx-3 px-4"><i class="bi bi-pencil"></i> Edit </button>
              <button class="btn btn-outline-danger  px-4"><i class="bi bi-trash"></i> Delete</button>
            </td>
          </tr>
    {{/each}}
  </tbody>
</table>
</div>